style {
  :root {
    --indian-red: #ed5463ff;
    --light-gray: #ccced2ff;
    --dark-gray: #4e505a;
  }
  html,
  body {
    font-family: system-ui;
    padding: 0;
    margin: 0;
    height: 100%;
    background: var(--dark-gray);
  }
  code {
    color: #fc0;
  }
  a {
    color: #09c;
  }
  header {
    background-color: var(--light-gray);
    border-bottom: 3px solid var(--indian-red);
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    height: 3rem;
  }
  a {
    color: var(--dark-gray);
  }
  .flex-between {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .flex-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
  }
  .logo {
    margin-left: 3rem;
    position: absolute;
    max-height: 50px;
    max-width: 50px;
  }
  
  .logo:hover {
    /* todo: transition this to on-click */
    /* animation: spin 1s ease-in-out; */
    animation: shake 0.3s ease-in-out;
  }

  @keyframes shake {
    0% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-5px);
    }
    50% {
      transform: translateX(5px);
    }
    75% {
      transform: translateX(-5px);
    }
    100% {
      transform: translateX(0);
    }
  }
}
